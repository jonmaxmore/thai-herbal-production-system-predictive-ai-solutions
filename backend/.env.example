# ตั้งค่าพอร์ตเซิร์ฟเวอร์
PORT=8080

# การตั้งค่า MongoDB
MONGODB_URI=mongodb://localhost:27017
DB_NAME=thai_herbal_db

# การตั้งค่า JWT
JWT_SECRET=your_strong_secret_here
JWT_ISSUER=thai-herbal-api
JWT_AUDIENCE=herbal-client
JWT_EXPIRY=3600 # 1 ชั่วโมง

# เส้นทางไฟล์ระบบ
AI_MODEL_PATH=assets/models
STORAGE_PATH=storage

# การตั้งค่าอีเมล (สำหรับการแจ้งเตือน)
MAILER_USER=your_email@example.com
MAILER_PASS=your_email_password

# คุณสมบัติพิเศษ
ENABLE_VIDEO_PROCESSING=true
